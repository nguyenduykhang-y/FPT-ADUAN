<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SPLikeActivity">


    <LinearLayout
        android:id="@+id/btnBackUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
        <ImageView
            android:id="@+id/ivBackSetting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tvBackUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivBackSetting"
            android:textSize="25dp"
            android:layout_centerVertical="true"

            android:textColor="@color/homeapp"
            android:text="Sản phẩm yêu thích"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvCart"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>