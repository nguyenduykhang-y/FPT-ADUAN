<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
 >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:padding="16dp">
    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:textColor="@color/homeapp"
          android:textSize="20dp"
          android:fontFamily="@font/tahomabd"
          android:layout_toEndOf="@+id/left_icon"
          android:text="Thêm sản phẩm"/>
  </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"

            android:background="@drawable/khungvien"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/Xam"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/camera" />

                <TextView
                    android:id="@+id/TakePhoto"
                    android:layout_width="150dp"
                    android:layout_height="42dp"
                    android:fontFamily="@font/tahoma"
                    android:text="+ Thêm ảnh"
                    android:textAlignment="textStart"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/laptop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tahoma"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/homeapp"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editTextProductName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edt"
                    android:ems="10"
                    android:hint="Tên"
                    android:fontFamily="@font/tahoma"
                    android:inputType="text"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/tahoma"
                    android:text="Giá sản phẩm"
                    android:textColor="@color/homeapp"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editTextProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edt"
                    android:ems="10"
                    android:hint="Giá"
                    android:fontFamily="@font/tahoma"
                    android:inputType="number"
                    android:padding="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/tahoma"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/homeapp"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editTextProductQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edt"
                    android:ems="10"
                    android:fontFamily="@font/tahoma"
                    android:hint="Product Quantity"
                    android:inputType="number"
                    android:padding="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/tahoma"
                    android:text="Loại sản phẩm"
                    android:textColor="@color/homeapp"
                    android:textSize="12dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Spinner
        android:id="@+id/spinnerCategories"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="6"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        android:background="@drawable/edt"
        android:paddingLeft="20dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="@drawable/icons8_down_button_24px_1"/>
</LinearLayout>

                
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tahoma"
                android:textColor="@color/homeapp"
                android:backgroundTint="@color/Xam"
                android:text="Cancel" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/tahoma"
                android:backgroundTint="@color/homeapp"
                android:text="ADD" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>