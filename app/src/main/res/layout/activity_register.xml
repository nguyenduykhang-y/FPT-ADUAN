<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="10dp"
    >
    <TextView
        android:id="@+id/DN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng kí tài khoản"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="48dp"
        android:textSize="25dp"
        android:textColor="#233178"


        />
    <TextView
        android:id="@+id/tvNhapthongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin"
        android:layout_below="@id/DN"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="48dp"
        android:textSize="20dp"
        android:textColor="#000000"


        />
    <EditText
        android:id="@+id/fullname"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Username"
        android:layout_below="@+id/tvNhapthongtin"
        android:inputType="textPersonName"


        />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Email"
        android:layout_below="@+id/edName"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Password"
        android:layout_below="@+id/edEmail"
        android:inputType="textPersonName"


        />

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter the password"
        android:layout_below="@+id/edPassword"
        android:inputType="textPersonName"


        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Phone"
        android:layout_below="@+id/edPassword"
        android:inputType="textPersonName"


        />
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edReenterPassword"
        android:layout_marginLeft="118dp"

        android:text="Xác nhận"
        android:backgroundTint="@color/homeapp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="22dp"
        android:textSize="18dp"

        android:textAllCaps="false"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"


        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/facebook"/>
        <TextView
            android:id="@+id/TextOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:text="OR" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="40dp"
            android:src="@drawable/google"/>
    </LinearLayout>
    <TextView
        android:id="@+id/LogInbtn"
        android:onClick="LognIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:text="Quay lại màng hình đăng nhập"
        android:textSize="14dp"
        android:textStyle="normal" />





</LinearLayout>