<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.ViewActivity">

   <RelativeLayout
       android:id="@+id/header"
       android:layout_width="414dp"
       android:layout_height="104dp"
       android:background="#FF6600">
<!--      <ImageView-->
<!--          android:layout_width="40dp"-->
<!--          android:layout_height="40dp"-->
<!--          android:src="@drawable/add_shopping_cart_30px"-->
<!--          android:layout_alignParentRight="true"-->
<!--          android:layout_marginRight="10dp"-->
<!--          android:layout_marginTop="5dp"-->
<!--          />-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

         <LinearLayout
             android:layout_width="120dp"
             android:layout_height="54dp"
             android:orientation="vertical"
             android:background="@drawable/radius_custom"
             android:layout_marginStart="5dp"
             android:layout_marginTop="44dp"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Khu Vực: "
                android:textSize="15dp"
                android:fontFamily="@font/tahoma"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Tp. Hồ Chí Minh"
                android:textSize="15dp"
                android:fontFamily="@font/tahoma"
                />
         </LinearLayout>
         <RelativeLayout
             android:layout_width="270dp"
             android:layout_height="54dp"
             android:background="@drawable/radius_custom"
             android:layout_marginTop="44dp"
             android:layout_marginStart="10dp">
            <EditText
                android:id="@+id/Search"
                android:layout_width="255dp"
                android:layout_height="54dp"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:hint="Bạn cần tìm dì ?"
                android:textSize="20dp"
                android:fontFamily="@font/tahoma"/>
         </RelativeLayout>

      </LinearLayout>

   </RelativeLayout>
   <androidx.viewpager.widget.ViewPager
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/bottom_nv"
       android:layout_below="@+id/header"/>


   <com.google.android.material.bottomnavigation.BottomNavigationView
       android:id="@+id/bottom_nv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:background="#FFFFFF"
       app:itemIconTint="#FF6600"
       app:itemIconSize="20dp"
       app:itemTextColor="#FF6600"
       app:menu="@menu/menu_nav"
       tools:ignore="MissingConstraints"/>
</RelativeLayout>