<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.UserFragment">


    <RelativeLayout
        android:id="@+id/btnBackUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/ivBackSetting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvBackUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivBackSetting"
            android:text="Setting"

            android:textColor="@color/homeapp"
            android:textSize="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tvUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Thông tin tài khoản"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvFavProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Sản phẩm yêu thích"
            android:textSize="20dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/user_logout"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Xam"
                android:elevation="10dp"
                android:text="Logout"
                android:textColor="@color/homeapp" />
        </RelativeLayout>







    </LinearLayout>


</FrameLayout>