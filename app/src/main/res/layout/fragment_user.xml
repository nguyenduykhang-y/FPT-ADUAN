<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flUserSetting"
    android:padding="10dp"
    tools:context=".Screen.ViewActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="414dp"
        android:layout_height="90dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/iconGH"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/ic_setting" />
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user"
            />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userImage"
            android:paddingLeft="10dp"
            android:text="User"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@+id/userImage"
            android:paddingLeft="10dp"
            android:text="Thông tin tài khoản"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/Num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <TextView
            android:id="@+id/FavNum"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="1" />
        <TextView
            android:id="@+id/ShopNum"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="1" />

        <TextView
            android:id="@+id/SaleNum"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="1" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Num">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Yêu thích" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Shop" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Giảm giá" />

    </LinearLayout>
    <TextView
        android:id="@+id/ProductInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Count"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Các thông tin về sản phẩm"/>
    <RelativeLayout
        android:id="@+id/ButtonProductInfo"
        android:layout_width="390dp"
        android:layout_height="110dp"
        android:layout_below="@+id/ProductInfo"
        android:background="@drawable/radius_custom"
        android:layout_centerHorizontal="true"
        android:elevation="10dp">
        <RelativeLayout
            android:id="@+id/imageViewWorking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <ImageView
            android:id="@+id/imageViewPay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_pay"/>
        <ImageView
            android:id="@+id/imageViewShipping"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_waiting"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imageViewDelivering"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delivery"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewWorking"
            android:layout_centerVertical="true"
            android:text="Chờ thanh toán"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewWorking"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:text="Chờ vận chuyển"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewWorking"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Chờ giao hàng"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </RelativeLayout>
    <TextView
        android:id="@id/Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonProductInfo"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Khác"/>
    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="220dp"
        android:layout_below="@+id/Other"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radius_custom"
        android:elevation="10dp">

        <RelativeLayout
            android:id="@+id/imageViewButtonOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/imageViewCoin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_coin"
                 />

            <ImageView
                android:id="@+id/imageViewFree"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_free"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/imageViewShipFlash"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_shipflash"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tvOther"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewButtonOther">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:layout_centerVertical="true"
                android:text="Xu"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Free"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="ShipFlash"
                android:textColor="@color/black"
                android:paddingRight="10dp"
                android:textSize="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageViewButtonOther2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOther"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/imageViewExpress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_express" />

            <ImageView
                android:id="@+id/imageViewShipFlash2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_shipflash2" />

            <ImageView
                android:id="@+id/ivUserInsert"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add_box"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tvOther2"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewButtonOther2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:text="Express Delivery"
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="ShipFlash"/>

            <TextView
                android:id="@+id/tvShop"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"
                android:text="Thêm sản phẩm"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:visibility="gone"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
</ScrollView>